<plugin name='restful-api' version='0.10.0' grailsVersion='2.2.0 &gt; *'>
  <author>Charles Hardt, Shane Riddell</author>
  <authorEmail>shane_riddell@icloud.com</authorEmail>
  <title>RESTful API Plugin</title>
  <description>        |The resful-api plugin facilitates exposing a non-trivial,
        | versioned RESTful API. The plugin provides a DSL that may
        | be used to declaratively specify how resources should be
        | marshalled. Please see the README.md for details.
        |.stripMargin()</description>
  <documentation>https://github.com/restfulapi/restful-api/blob/master/README.md</documentation>
  <type>RestfulApiGrailsPlugin</type>
  <resources>
    <resource>net.hedtech.restfulapi.RestfulApiController</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='http://grails.org/plugins' url='http://grails.org/plugins' />
  </repositories>
  <dependencies>
    <test>
      <dependency group='org.spockframework' name='spock-grails-support' version='0.7-groovy-2.0' />
    </test>
  </dependencies>
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='cache-headers' version='1.1.7' />
      <plugin group='org.grails.plugins' name='inflector' version='0.2' />
    </compile>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>